                          Style="{StaticResource CheckBox3}"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <CheckBox Name="AlcoholContainingDrugs"
                          Content="Cпиртосодержащие лекарственные препараты" 
                          Checked="AlcoholContainingDrugs_Checked"
                          Unchecked="AlcoholContainingDrugs_UnChecked"
                          Style="{StaticResource CheckBox4}"/>
                    </Grid>

                    <!--Наркозависимость-->
                    <GroupBox Header="Другая информация по наркозависимости" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                      Margin="5,0" 
                      Grid.Row="7" Grid.RowSpan="8"/>
                    <Grid Grid.Row="8">
                        <Label Content="Вид наркотика" 
                       Style="{StaticResource LabelDiag}"
                       ToolTip="Употребляемые вещества"/>
                        <TextBox Name="TypeOfDrug"
                         Style="{StaticResource TextCombo2}"
                         ToolTip="Употребляемые вещества"/>
                    </Grid>
                    <Grid Grid.Row="9">
                        <Label Content="Способ употребления наркотиков" 
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name="DrugUse" 
                          Style="{StaticResource TextCombo2}">
                            <TextBlock>Парентерально</TextBlock>
                            <TextBlock>Перорально</TextBlock>
                            <TextBlock>Сниффинг</TextBlock>
                            <TextBlock>Курение</TextBlock>
                            <TextBlock>Сублингвальный</TextBlock>
                            <TextBlock>Другое</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="10">
                        <Label Content="Год первого употребления наркотика" 
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="YearOfFirstUse" 
                         Margin="10,5"
                         VerticalAlignment="Center" HorizontalAlignment="Right"
                         Width="70"/>
                    </Grid>
                    <Grid Grid.Row="11">
                        <Label Content="Стаж злоупотребления" 
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name="ExperienceAbuseDrug" 
                          Style="{StaticResource TextCombo2}">
                            <TextBlock>До 1 года</TextBlock>
                            <TextBlock>Более 1 года</TextBlock>
                            <TextBlock>Более 2 лет</TextBlock>
                            <TextBlock>Более 3 лет</TextBlock>
                            <TextBlock>Более 5 лет</TextBlock>
                            <TextBlock>Более 10 лет</TextBlock>
                            <TextBlock>Более 15 лет</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="12">
                        <Label Content="Ремиссии" 
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name="Remissions" 
                          Style="{StaticResource TextCombo2}">
                            <TextBlock>Нет</TextBlock>
                            <TextBlock>Cпонтанные</TextBlock>
                            <TextBlock>Терапевтические</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="13">
                        <Label Content="Количество ремиссий" 
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="RemissionNumber" 
                         Style="{StaticResource TextCombo2}"
                         ToolTip="Количество ремиссий"/>
                    </Grid>
                    <Grid Grid.Row="14">
                        <Label Content="Продолжительность ремиссий" 
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="RemissionTimer" 
                         Style ="{StaticResource TextCombo2}" 
                         ToolTip="Продолжительность ремиссий"/>
                    </Grid>

                    <!--Информация о смерти-->
                    <GroupBox Header="Данные о смерти" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Margin="5,0"
                      Grid.Row="15" Grid.RowSpan="12"/>
                    <Grid Grid.Row="16">
                        <Label Content="Дата смерти"
                       Style="{StaticResource LabelDiag}"/>
                        <CheckBox Name="OrentirDead" 
                          Content="Ориентир."
                          VerticalAlignment="Center" HorizontalAlignment="Center"
                          Checked="OrintirDead_Checked"
                          Unchecked="OrintirDead_UnChecked"/>
                        <TextBox Name="DateOfDead"
                         Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="17">
                        <Label Content="Место смерти"
                  Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="PlaceOfDead"
                          Style="{StaticResource TextCombo2}">
                            <TextBlock>УЗ</TextBlock>
                            <TextBlock>Дома</TextBlock>
                            <TextBlock>Дрогое место</TextBlock>
                            <TextBlock>Учереждение системы соцзащиты (Интернат, дом престарелых)</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="18">
                        <Label Content="№ Свидетельства о смерти"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="DeathCertificate"
                         Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="19">
                        <Label Content="Причина смерти"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="CauseOfDeat" 
                         Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="20">
                        <Label Content="Категория и род смерти" 
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="DeathCategory" 
                        Style="{StaticResource TextCombo2}">
                            <TextBlock>Ненасильственная</TextBlock>
                            <TextBlock>Суицид</TextBlock>
                            <TextBlock>Убийство</TextBlock>
                            <TextBlock>Несчастный случай</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="21">
                        <Label Content="Место вскрытия трупа"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="OpeningPlace"
                          Style="{StaticResource TextCombo2}">
                            <TextBlock Text="Судебно-медицинское учреждение"/>
                            <TextBlock Text= "Патологоанатомическое бюро"/>
                            <TextBlock Text="Свидетельство о смерти выдано без вскрытия"/>
                            <TextBlock Text="Не уточнено"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="22">
                        <CheckBox Name="HistoryOfParasucicides"
                         Margin="10,0"
                         FontSize="15"
                         Checked="HistoryOfParasucicides_Checked"
                         Unchecked="HistoryOfParasucicides_UnChecked"
                         VerticalAlignment="Center" HorizontalAlignment="Right"  
                         Content="Парасуициды в анамнезе"/>
                    </Grid>
                    <Grid Grid.Row="23">
                        <Label Content="Особенности наблюдения" 
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="FeaturesOfObservation"
                         Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="24">
                        <Label Content="Год учета"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name ="DataInfo"
                       Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="25">
                        <Label Content="Возраст на момент постановки на учет"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBlock Name ="AgeOfRegistration"
                       Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="26">
                        <Label Content="Возраст на момент смерти"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBlock Name ="AgeOfDead"
                           Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="27">
                        <Label Content="Регистратор"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBlock Name="Registrator" 
                           Style="{StaticResource TextCombo2}"/>
                    </Grid>
                    <Grid Grid.Row="29">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Button Name="ButtonAddCombo"
                            Style="{StaticResource Button}"
                            IsEnabled="{Binding ElementName=FIO, Path=Text.Length}"
                            Content="Добавить" 
                            Click="ButtonAddCombo_Click"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Button Name="ExitCombo" 
                            Style="{StaticResource Button}"
                            Content="Назад"
                            Click="ExitCombo_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
