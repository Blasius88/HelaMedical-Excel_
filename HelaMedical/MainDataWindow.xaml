<Window x:Class="HelaMedical.MainDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelaMedical"
        mc:Ignorable="d"
        Title="HelaMedical Алкоголизм" WindowState="Maximized" Height="1200" Width="1900">
    <Grid>
        <ScrollViewer Name="scroll" 
                      CanContentScroll="True"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MinWidth="460"/>
                    <ColumnDefinition MinWidth="485"/>
                    <ColumnDefinition MinWidth="470"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="35*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <!--Интерфейс персональных данных-->
                    <GroupBox Header="Персональные данные"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Margin="0" Grid.RowSpan="12"/>
                    <Grid Grid.Row="1">
                        <Label Content="ФИО" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="FIO" 
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5" 
                         TextWrapping="Wrap" 
                         Width="250" 
                         FontSize="15"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Label Content="Пол" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="Sex" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock Text ="Мужской"/>
                            <TextBlock Text="Женский"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Label Content="Дата Рождения "  
                       Style="{StaticResource LabelDiag}" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Name ="Date" 
                         ToolTip="Введите дату в формате dd.mm.yyyy"
                         Style="{StaticResource ComboBox1}"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Label Content="Место проживания" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="Life" 
                          Style="{StaticResource ComboBox1}" Margin="0,7,10,9">
                            <TextBlock Text ="Город"/>
                            <TextBlock Text ="Деревня"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="5">
                        <Label Content="Адрес проживания"   
                       Style="{StaticResource LabelDiag}" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Name ="Age" 
                         Style="{StaticResource ComboBox1}"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Label Content="Семейный статус" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Name ="FamilyStatus"
                          Style="{StaticResource ComboBox1}">
                            <TextBlock Text ="Холост"/>
                            <TextBlock Text ="Разведен"/>
                            <TextBlock Text ="В браке"/>
                            <TextBlock Text ="Второй и последующий брак"/>
                            <TextBlock Text ="Вдовец/Вдова"/>
                            <TextBlock Text ="Гражданский брак(сожительство)"/>
                            <TextBlock Text ="Не уточнено"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="7">
                        <Label Content="Кол-во детей" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Name ="CostOfKids" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock Text ="1"/>
                            <TextBlock Text ="2"/>
                            <TextBlock Text =">2"/>
                            <TextBlock Text ="Нет"/>
                            <TextBlock Text ="Не уточнено"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="8">
                        <Label Content="Состав семьи"  
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox Name="FamilyComposition" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock Text ="Проживал один/одна"/>
                            <TextBlock Text ="Проживал вместе с детьми"/>
                            <TextBlock Text ="Проживал с партнером"/>
                            <TextBlock Text="Проживал в семье" />
                            <TextBlock Text ="Проживал с родителями"/>
                            <TextBlock Text ="Проживал с одним родителем"/>
                            <TextBlock Text ="Другое"/>
                            <TextBlock Text="Не уточнено" />
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="9">
                        <Label Content="Уровень образования"  
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="Education" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock>Начальное</TextBlock>
                            <TextBlock>Незаконченное среднее (Базовое)</TextBlock>
                            <TextBlock>Среднее полное</TextBlock>
                            <TextBlock>Среднее специальное (Колледж, Техникум)</TextBlock>
                            <TextBlock>Незаконченное высшее</TextBlock>
                            <TextBlock>Высшее</TextBlock>
                            <TextBlock>Высшее "продвинутое"(2-ое высшее, аспирантура)</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="10">
                        <Label Content="Профессия/Должность" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="Profession" 
                         Style="{StaticResource ComboBox1}"
                         TextWrapping="Wrap"/>
                    </Grid>
                    <Grid Grid.Row="11">
                        <Label Content="Уровень квалификации профессии" 
                        Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name="TheSkillLevelOfTheProfession"
                          Style="{StaticResource ComboBox1}">
                            <TextBlock>Физический труд</TextBlock>
                            <TextBlock>Полуавтоматический труд</TextBlock>
                            <TextBlock>Автоматический труд</TextBlock>
                            <TextBlock>Умственный труд</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>

                    <GroupBox Header="Постановка на учет" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      Margin="0" Grid.Row="12" Grid.RowSpan="7"/>
                    <Grid Grid.Row="13">
                        <Label Content="Адрес постановки на учет" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="AddressOfRegistration" 
                         Style="{StaticResource ComboBox1}" 
                         TextWrapping="Wrap"/>
                    </Grid>
                    <Grid Grid.Row="14">
                        <Label Content="Адрес на момент смерти" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="AddressAtTheTimeOfDeath" 
                         Style="{StaticResource ComboBox1}" 
                         TextWrapping="Wrap"/>
                    </Grid>
                    <Grid Grid.Row="15">
                        <Label Content="Дата постановки на учет"
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="DataOfRegistration"
                         ToolTip="Введите дату в формате dd.mm.yyyy"
                         Style="{StaticResource ComboBox1}"/>
                    </Grid>
                    <Grid Grid.Row="16">
                        <Label Content="Дата повторной постановки на учет"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="ReRegistrationData" 
                         Style="{StaticResource ComboBox1}"
                         ToolTip="Введите дату в формате dd.mm.yyyy"/>
                    </Grid>
                    <Grid Grid.Row="17">
                        <Label Content="Вид постановки на учет"  
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="TypeOfRegistration" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock>Протокол  экстренного алкогольного (наркотического) освидетельствования</TextBlock>
                            <TextBlock>Самостоятельное обращение</TextBlock>
                            <TextBlock>Сообщение любого УЗ</TextBlock>
                            <TextBlock>Выявление милицией</TextBlock>
                            <TextBlock>Информация следственных органов</TextBlock>
                            <TextBlock>Информация медицинских вытрезвителей</TextBlock>
                            <TextBlock>Другое</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="18">
                        <Label Content="Наследственность" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name="Heredity"
                          Style="{StaticResource ComboBox1}">
                            <TextBlock>Отцовская линия</TextBlock>
                            <TextBlock>Материнская линия</TextBlock>
                            <TextBlock>Оба родителя</TextBlock>
                            <TextBlock>Другое(напр. племянник)</TextBlock>
                            <TextBlock>Не отягощена</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>

                    <GroupBox Header="Инвалидность"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Grid.Row="19" Grid.RowSpan="4"
                      Margin="0"/>
                    <Grid Grid.Row="20">
                        <Label Content="Группа инвалидности"  
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="DisabilityGroup" 
                          Style="{StaticResource ComboBox1}">
                            <TextBlock Text="Нет"/>
                            <TextBlock Text="I"/>
                            <TextBlock Text="II"/>
                            <TextBlock Text="III"/>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="21">
                        <Label Content="Статус инвалидности" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <ComboBox Name ="DisabilityStatus"
                          Style="{StaticResource ComboBox1}">
                            <TextBlock>По соматическому заболеванию</TextBlock>
                            <TextBlock>По психическому заболеванию</TextBlock>
                            <TextBlock>Не уточнено</TextBlock>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="22">
                        <Label Content="Осн. для инвалидности" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"
                       Style="{StaticResource LabelDiag}"/>
                        <TextBox Name="ReasonForDisability" 
                         Style="{StaticResource ComboBox1}"/>
                    </Grid>

                    <GroupBox Header ="Социально - экономический статус"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Grid.Row="23" Grid.RowSpan="4"/>

                    <Grid Grid.Row="24">
                        <CheckBox Name ="WorksStatus" 
                          Content="Работает" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="5,0"
                          Checked="WorksStatus_Checked" 
                          Unchecked="WorksStatus_UnChecked"/>
                        <CheckBox Name ="WorksStatus3"
                          Content="Не работает" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="10,0" 
                          Width="250"
                          Checked="WorksStatus_Checked3" 
                          Unchecked="WorksStatus_UnChecked3" />
                    </Grid>
                    <Grid Grid.Row="25">
                        <CheckBox Name ="WorksStatus2" 
                          Content="Работает эпизодически" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="5,0" 
                          Checked="WorksStatus_Checked2" 
                          Unchecked="WorksStatus_UnChecked2"/>
                        <CheckBox Name ="WorksStatus5" 
                          Content="Неработающий пенсионер" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="10,0"
                          Width="250"
                          Checked="WorksStatus_Checked5"
                          Unchecked="WorksStatus_UnChecked5"/>
                    </Grid>
                    <Grid Grid.Row="26">
                        <CheckBox Name ="WorksStatus4" 
                          Content="Работающий пенсионер" 
                          HorizontalAlignment="Left" VerticalAlignment="Center" 
                          Margin="5,0" 
                          Checked="WorksStatus_Checked4"
                          Unchecked="WorksStatus_UnChecked4"/>
                        <CheckBox Name ="WorksStatus6" 
                          Content="Не уточнено" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="10,0"
                          Width="250"
                          Checked="WorksStatus_Checked6" 
                          Unchecked="WorksStatus_UnChecked6"/>
                    </Grid>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="15*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="10*"/>
                        <RowDefinition Height="25*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header ="Адм. и уголовная ответственность" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Margin="0" Grid.RowSpan="9"/>
                    <Grid Grid.Row="1">
                        <Label Content="Привлечение к адм. ответственности (Кол-во)" 
                   Style="{StaticResource LabelDiag}" 
                   HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                        <TextBox Name ="AdmOtv" 
                         Width="40"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5"  
                         FontSize="15" 
                         TextWrapping="Wrap"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Label Content="Привлечение к угол. ответственности (Кол-во)" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left"/>
                        <TextBox Name ="UgOtv" 
                         Width="40"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5" 
                         TextWrapping="Wrap" 
                         FontSize="15"/>
                    </Grid>
                    <Grid Grid.Row="3">
                        <Label Content="Длительность пребывания в МЛС" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left"/>
                        <TextBox Name ="DlitMLS" 
                         Width="70"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5" 
                         TextWrapping="Wrap"  
                         FontSize="15"/>
                    </Grid>
                    <Grid Grid.Row="4">
                        <Label Content="Статья 107" 
                       Style="{StaticResource LabelDiag}" 
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <CheckBox Name ="Stat107" 
                          Content="Да"
                          Margin="10,0" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Width="70"
                          Checked="Sta107_Checked"
                          Unchecked="Sta107_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="5">
                        <Label Content="Номер статей УК РБ" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Name ="StatUKRB" 
                         Width="160"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5"
                         TextWrapping="Wrap" 
                         FontSize="15"/>
                    </Grid>
                    <Grid Grid.Row="6">
                        <Label Content="Лишение родительских прав"  
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <CheckBox Name ="RodPrav" 
                          Content="Да" 
                          Margin="10,5"
                          Checked="RodPrav_Checked"
                          Unchecked="RodPrav_UnChecked"
                          HorizontalAlignment="Right" VerticalAlignment="Center" 
                          Width="70" />
                    </Grid>
                    <Grid Grid.Row="7">
                        <Label Content="ЛТП номер" 
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Name ="NomLTP" 
                         Width="160"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5"  
                         TextWrapping="Wrap"
                         FontSize="15"/>
                    </Grid>
                    <Grid Grid.Row="8">
                        <Label Content="ЛТП количество"
                       Style="{StaticResource LabelDiag}"
                       HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox Name ="LTPKol" 
                         Width="40"
                         HorizontalAlignment="Right" VerticalAlignment="Center"
                         Margin="10,5"  
                         FontSize="15"
                         TextWrapping="Wrap"/>
                    </Grid>

                    <GroupBox Header ="Больничные данные" 
                      Margin="0"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Grid.RowSpan="21" Grid.Row="9"/>

                    <GroupBox Content="Больницы" 
                      Margin="10,0"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Grid.Row="10" Grid.RowSpan="6"/>
                    <Grid Grid.Row="11">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column ="0">
                            <CheckBox Name ="HospGKND" 
                              Content="ГКНД" 
                              Margin="20,0" 
                              Width="80"
                              Checked="HostGKND_Checked"
                              Unchecked="HostGKND_UnChecked"
                              HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBox Name="QuantityGNKD" 
                             IsEnabled="{Binding ElementName=HospGKND, Path=IsChecked}"
                             HorizontalAlignment="Left" VerticalAlignment="Center" 
                             Margin="100,0,0,0"
                             FontSize="15" 
                             ToolTip="Количество раз" 
                             Width="30"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <CheckBox Name ="HospRKPB" 
                              Content="РКПБ/РНПЦ"
                              Margin="0,0,100,0"
                              Width="120"
                              Checked="HospRKPB_Checked"
                              Unchecked="HospRKPB_UnChecked"
                              HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            <TextBox Name="QuantityRKPB" 
                             IsEnabled="{Binding ElementName=HospRKPB, Path=IsChecked}"
                             Width="30" 
                             HorizontalAlignment="Right" VerticalAlignment="Center"
                             Margin="20,0" 
                             FontSize="15" 
                             ToolTip="Количество раз"/>
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <CheckBox Name="HospBSMP" 
                              Content="БСМП" 
                              Margin="20,0" 
                              Width="70"
                              Checked="HospBSMP_Checked"
                              Unchecked="HospBSMP_UnChecked"
                              HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            <TextBox Name="QuantityBSMP" 
                             IsEnabled="{Binding ElementName=HospBSMP, Path=IsChecked}"
                             Width="30" 
                             HorizontalAlignment="Left" VerticalAlignment="Center"
                             Margin="100,0,0,0"
                             FontSize="15"
                             ToolTip="Количество раз"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <CheckBox Name="HospOther" 
                              Content="Другая"
                              Margin="0,0,100,0"
                              Width="120"
                              Checked="HospOther_Checked"
                              Unchecked="HospOther_UnChecked"
                              HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                    <GroupBox Content="Другие больницы"
                      Margin="30,0" 
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch" 
                      Grid.Row="13" Grid.RowSpan="2"/>

                    <Grid Grid.Row="14">
                        <Button Content="Выбрать другие больницы" 
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        IsEnabled="{Binding ElementName=HospOther, Path=IsChecked}"
                        FontSize="15"  
                        Click="OtherHosp_Click"
                        ToolTip="Выбрать другие больницы"/>
                    </Grid>


                    <GroupBox Header="Экстранозологическая коморбидность"
                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                      Margin="10,0"
                      Grid.Row="16" Grid.RowSpan="7"/>
                    <Grid Grid.Row="17">
                        <CheckBox Name="CHMT" 
                          Content="ЧМТ" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0" 
                          Checked="CHMT_Checked"
                          Unchecked="CHMT_UnChecked"/>
                        <CheckBox Name="CHMTMultiple"
                          Content="ЧМТ Множ" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0" 
                          Width="200"
                          Checked="CHMTMultiple_Checked"
                          Unchecked="CHMTMultiple_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="18">
                        <CheckBox Name="BoneАracture" 
                          Content="Перелом костей" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0" 
                          Checked="BoneАracture_Checked" 
                          Unchecked="BoneАracture_UnChecked"/>
                        <CheckBox Name="BoneАractureMultiple"
                          Content="Перелом костей множ" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0"
                          Width="200"
                          Checked="BoneАractureMultiple_Checked"
                          Unchecked="BoneАractureMultiple_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="19">
                        <CheckBox Name="Wound" 
                          Content="Ранение" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0" 
                          Checked="Wound_Checked"
                          Unchecked="Wound_UnChecked"/>
                        <CheckBox Name="Tuberculosis" 
                          Content="Туберкулез" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0"
                          Width="200"
                          Checked="Tuberculosis_Checked"
                          Unchecked="Tuberculosis_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="20">
                        <CheckBox Name="HepatitisB" 
                          Content="Гепатит B" 
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0" 
                          Checked="HepatitisB_Checked"
                          Unchecked="HepatitisB_UnChecked"/>
                        <CheckBox Name="HepatitisC" 
                          Content="Гепатит C" 
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0" 
                          Width="200"
                          Checked="HepatitisC_Checked"
                          Unchecked="HepatitisC_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="21">
                        <CheckBox Name="JazvaZeludka" 
                          Content="Язва желудка"
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0" 
                          Checked="JazvaZeludka_Checked"
                          Unchecked="JazvaZeludka_UnChecked"/>
                        <CheckBox Name="JazvaDPK"
                          Content="Язва ДПК"
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0" 
                          Width="200"
                          Checked="JazvaDPK_Checked"
                          Unchecked="JazvaDPK_UnChecked"/>
                    </Grid>
                    <Grid Grid.Row="22">
                        <CheckBox Name="HIV" 
                          Content="ВИЧ"
                          HorizontalAlignment="Left" VerticalAlignment="Center"
                          Margin="20,0"
                          Checked="HIV_Checked"
                          Unchecked="HIV_UnChecked"/>
                        <CheckBox Name="NotSpecifiedEksta"
                          Content="Не уточнено"
                          HorizontalAlignment="Right" VerticalAlignment="Center"
                          Margin="20,0" 
                          Width="200"
                          Checked="NotSpecifiedEksta_Checked"
                          Unchecked="NotSpecifiedEksta_UnChecked"/>
